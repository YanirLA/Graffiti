{
    "manifest_version": 2,
    "name": "Graffiti for OpenGrok",
    "description": "Graffiti support for opengrok",
    "version": "1.0.0",
    "icons": {
        "512": "images/icon.png"
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "add_to_graffiti": {
            "suggested_key": {
                "default": "Ctrl+Shift+A"
            },
            "description": "Graffiti: add to graph"
        },
        "add_to_graffiti_with_custom_edge": {
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            },
            "description": "Graffiti: add to graph with edge info"
        }
    },
    "web_accessible_resources": [
        "scripts/injected_to_page.js"
    ],
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "notifications",
        "<all_urls>"
    ]
}